@charset "utf-8"

/*----------------------------------------------------------
 common tag style
----------------------------------------------------------*/
html
    min-height 100%
    height 100%

body
    margin      0
    color       #555
    font-family 'RobotoDraft',
                'Roboto',
                sans-serif
    min-height  100%
    height 100%

textarea
    border none
    &:focus
        outline 0
        margine 0 0

input
    &:focus
        outline 0

a
    text-decoration none

/*----------------------------------------------------------
 common layout class
----------------------------------------------------------*/
.l-block
    display block

.l-inline-block
    display        inline-block
    vertical-align top

.l-flex
    display flex

/*----------------------------------------------------------
 header
----------------------------------------------------------*/
$bg-header     = #009688;
$color-header  = #fff;
$height-header = 50px

.md-header
    background  $bg-header
    box-shadow  0 2px 5px rgba(0,0,0,0.26)
    height      $height-header
    line-height $height-header
    box-sizing  border-box
    padding     0 5px
    color       $color-header

    a
        color $color-header

.md-app-title
    font-size   18px
    margin      0
    font-weight normal

.md-out-links
    display  inline-block
    right    20px
    position absolute
    font-size 25px

    a
        margin-left 5px

/*----------------------------------------------------------
 commentList
----------------------------------------------------------*/
$border-color-nav-common = #e0e0e0

#nav
    width        230px
    border-right 1px solid $border-color-nav-common

    &__comment-list
        margin          0
        padding         0
        list-style-type none


.md-li-comment-search
    border-bottom 1px solid $border-color-nav-common

.md-keyword-search-comment
    border-radius 13px
    border        none
    padding       0 10px
    background    transparent
    height        40px

.md-comment
    border-bottom 1px solid $border-color-nav-common

.am-fade-opacity-enter
    -webkit-transition 1s ease-in

    &-active
        opacity 1

.am-fade-opacity-leave
    -webkit-transition .5s ease-out

    &-active
        opacity 0

/*----------------------------------------------------------
 commentForm
----------------------------------------------------------*/
#commentForm
    height  100vh
    width   100%

    .l-line-number
        display     block
        padding     0 3px
        text-align  right
        line-height 1.4

    .l-horizontal
        vertical-align top
        display        inline-block

    &__wrapper-edit
        width        50%
        height       100%
        border-right 1px solid #e0e0e0

        .md-heading-editor
            $height = 41px

            border-bottom 1px solid #e0e0e0
            margin        0
            box-sizing    border-box
            height        $height
            line-height   $height
            padding       0 5px

        &__box-edit
            font-size    13px

            &__box-line-numbers
                padding-top 3px
                background  #e0e0e0

            &__textarea
                font-size    13px
                width        100%
                height       700px
                line-height  1.4
                resize       none

    &__box-preview
        width      50%
        height     100%

        .md-heading-preview
            $height = 41px

            border-bottom 1px solid #e0e0e0
            margin        0
            box-sizing    border-box
            height        $height
            line-height   $height
            padding       0 5px

        .md-preview
            padding 0 10px

        p > code
            padding       0 5px
            border-radius 3px
            border        1px solid #e0e0e0
            color         #009688
            font-family   Menlo,
                          Monaco,
                          Consolas,
                          'Courier New',
                          monospace

        pre
            padding       10px
            border-radius 3px
            background    #e0e0e0
            font-family   Menlo,
                          Monaco,
                          Consolas,
                          'Courier New',
                          monospace