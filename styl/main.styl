@charset "utf-8"

/*----------------------------------------------------------
 common tag style
----------------------------------------------------------*/
body
    margin 0

textarea
    border none
    &:focus
        outline 0
input
    &:focus
        outline 0

ul
    list-style-type none

/*----------------------------------------------------------
 common layout class
----------------------------------------------------------*/
.l-block
    display block

.l-inline-block
    display inline-block

/*----------------------------------------------------------
 commentList
----------------------------------------------------------*/
border-color-nav-common = #ccc

#nav
    width        230px
    border-right 1px solid border-color-nav-common

    &__comment-list
        padding 0

.md-comment
    border-bottom 1px solid border-color-nav-common

.md-keyword-search-comment
    height        26px
    border-radius 13px
    border        1px solid border-color-nav-common
    padding       0 10px


/*----------------------------------------------------------
 commentForm
----------------------------------------------------------*/
#commentForm
    height 400px

    .l-line-number
        display    block
        padding    0 3px
        text-align right

    .l-horizontal
        vertical-align top
        display        inline-block

    &__wrapper-edit
        background     orange
        width          45%
        height         100%

        &__box-edit
            font-family sans-serif
            font-size   13px
            background  #333
            color       #fff

            &__box-line-numbers
                padding-top 3px

            &__textarea
                font-size  13px
                width      90%
                height     300px
                background #333
                color      #fff
                border-left  1px solid #666
                border-right 1px solid #666

    &__box-preview
        background lightblue
        width      45%
        height     100%
