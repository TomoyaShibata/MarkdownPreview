textarea
    border none

#commentForm
    height 400px

    .l-line-number
        display    block
        padding    0 3px
        text-align right

    .md-horizontal
        vertical-align top
        display        inline-block

    &__wrapper-edit
        background     orange
        width          45%
        height         100%

        &__box-edit
            font-family sans-serif
            font-size   13px
            background  #333
            color       #fff

            &__box-line-numbers
                padding-top 3px

            &__textarea
                font-size  13px
                width      90%
                height     300px
                background #333
                color      #fff
                border-left  1px solid #666
                border-right 1px solid #666

    &__box-preview
        background lightblue
        width      45%
        height     100%
