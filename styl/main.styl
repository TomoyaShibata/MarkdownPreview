@charset "utf-8"

/*----------------------------------------------------------
 variables
----------------------------------------------------------*/
$z-index-body         = 0
$z-index-modal-window = 1

$border-color-common = #e0e0e0

/*----------------------------------------------------------
 common tag style
----------------------------------------------------------*/
html
    min-height 100%
    height 100%

body
    margin      0
    color       #555
    // font-family 'RobotoDraft',
    //             'Roboto',
    //             sans-serif
    min-height  100%
    height      100%
    z-index     $z-index-body

textarea
    border none
    &:focus
        outline 0
        margine 0 0

input
    &:focus
        outline 0

a
    text-decoration none

/*----------------------------------------------------------
 common layout class
----------------------------------------------------------*/
.l-block
    display block

.l-inline-block
    display        inline-block
    vertical-align top

.l-flex
    display flex

.md-list-non-style
    list-style-type none

.md-pointer
    cursor pointer

/*----------------------------------------------------------
 header
----------------------------------------------------------*/
$bg-header     = #009688
$color-header  = #fff
$height-header = 50px

.md-header
    background  $bg-header
    box-shadow  0 2px 5px rgba(0,0,0,0.26)
    height      $height-header
    line-height $height-header
    box-sizing  border-box
    padding     0 5px
    color       $color-header

    a
        color $color-header

.md-app-title
    font-size   18px
    margin      0
    font-weight normal

.md-out-links
    display   inline-block
    right     30px
    position  absolute
    font-size 25px
    color     #00695C

/*----------------------------------------------------------
 commentList
----------------------------------------------------------*/
#container
    height 'calc(100% - %s)' % $height-header

/*----------------------------------------------------------
 commentList
----------------------------------------------------------*/
$border-color-nav-common = #e0e0e0

#nav
    width        230px
    border-right 1px solid $border-color-nav-common

    &__comment-list
        margin          0
        padding         0
        list-style-type none


.md-li-comment-search
    border-bottom 1px solid $border-color-nav-common

.md-keyword-search-comment
    border-radius 13px
    border        none
    padding       0 10px
    background    transparent
    height        40px

.md-comment
    border-bottom 1px solid $border-color-nav-common

.am-fade-opacity-enter
    -webkit-transition 1s ease-in

    &-active
        opacity 1

.am-fade-opacity-leave
    -webkit-transition .5s ease-out

    &-active
        opacity 0

/*----------------------------------------------------------
 commentForm
----------------------------------------------------------*/
.commentBox
    height 100%

#commentForm
    height 100%
    width  100%

    .md-input-commment-title
        height    40px
        width     100%
        font-size 30px

    .l-line-number
        display     block
        padding     0 3px
        text-align  center
        line-height 1.4
        font-family Menlo,
                    Monaco,
                    Consolas,
                    'Courier New',
                    monospace
        width       30px

    .l-horizontal
        vertical-align top
        display        inline-block

    &__wrapper-edit
        width        50%
        height       100%
        border-right 1px solid #e0e0e0

        .md-heading-editor
            $height = 41px

            height $height

            border-bottom 1px solid #e0e0e0
            margin        0
            box-sizing    border-box
            height        $height
            line-height   $height
            padding       0 5px

        &__box-edit
            height    calc(100% - 41px)
            font-size 13px

            &__box-line-numbers
                padding-top 3px
                background  #e0e0e0

            &__textarea
                font-size    13px
                width        100%
                line-height  1.4
                resize       none
                box-sizing   border-box
                padding      5px

    &__box-preview
        width  50%
        height calc(100% - 41px)

        .md-heading-preview
            $height = 41px

            border-bottom 1px solid #e0e0e0
            margin        0
            box-sizing    border-box
            height        $height
            line-height   $height
            padding       0 5px

        .md-preview
            padding    0 10px
            height     100%
            overflow-y auto

        p > code
            padding       0 5px
            border-radius 3px
            border        1px solid #e0e0e0
            color         #009688
            font-family   Menlo,
                          Monaco,
                          Consolas,
                          'Courier New',
                          monospace

        pre
            padding       10px
            border-radius 3px
            background    #e0e0e0
            font-family   Menlo,
                          Monaco,
                          Consolas,
                          'Courier New',
                          monospace

/*----------------------------------------------------------
 modal window
----------------------------------------------------------*/
.md-modal-window
    position      absolute
    top           0
    left          0
    right         0
    bottom        0
    margin        auto
    box-shadow    0 0 7px rgba(0, 0, 0, 0.26)
    border-radius 3px
    height        500px
    width         800px
    z-index       $z-index-modal-window
    background    #fafafa
    transition    opacity 0.25s ease-in

    &.is-opacity-zero
        opacity 0

.example-appear
    transform translateY(-150%)

.example-appear.example-appear-active
    transform  translateY(0%)
    transition 0.15s linear

.example-leave
    transform transformY(0%)

.example-leave.example-leave-active
    transform transform(-100%)
    transition transform 0.5s ease-in

.md-modal-title
    margin-top 0

.md-modal-close-button
    position  absolute
    right     10px
    top       5px
    font-size 25px

    &:hover
        color       #B71C1C
        text-shadow 0 0 10px #E53935

.md-modal-content
    margin 10px 20px

    a
        color #039BE5

    code
        padding       0 5px
        border-radius 3px
        border        1px solid #e0e0e0
        color         #009688
        font-family   Menlo,
                      Monaco,
                      Consolas,
                      'Courier New',
                      monospace

.md-modal-menu
    border-right 1px solid $border-color-common
    background   #fff

.md-modal-links
    margin  0
    padding 0

.md-modal-tab
    padding 18px 15px 17px 15px

    &:hover
        background #eee

.md-modal-change-logs
    ul
        margin       0
        padding-left 1.4em
